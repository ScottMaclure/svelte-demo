{
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "browser": true
  },
  "plugins": [
    "html"
  ],
  "rules": {
    "quotes": ["error", "single"],
    "eqeqeq": 1,
    "curly": 1,
    "no-console": 0
  },
  "globals": {
    "require": true,
    "__dirname": true
  }
}